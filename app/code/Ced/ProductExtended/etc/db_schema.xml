<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="liked_product" resource="default" engine="innodb" comment="Liked products table of ProductExtended module">
        <column xsi:type="smallint" name="id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="product_id" nullable="false" comment="Product Id"/>
        <column xsi:type="varchar" name="remote_ip" nullable="false" comment="Ip Address"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>